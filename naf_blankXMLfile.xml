<?xml version="1.0" encoding="UTF-8"?>
<nameAuthorityFile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="naf.xsd">
    <agents>
        <agent id="" agentType=""> <!-- 1...* --> <!-- id required --> <!-- agentType="person", "family", or "corporate body" -->
            <preferredName></preferredName> <!-- 1...1 -->
            <alternateName></alternateName> <!-- 0...* -->
            <family relatedAgent=""/> <!-- 0...* --> <!-- relatedAgent should only be agent typed as agentType="family" -->
            <dateOfBirth> <!-- 0...1 -->
                <!-- choose ONE of the following elements -->
                <year></year> <!-- YYYY -->
                <!-- OR -->
                <yearMonth></yearMonth> <!-- YYYY-MM -->
                <!-- OR -->
                <date></date> <!-- YYYY-MM-DD -->
                <!-- OR -->
                <approximateDate></approximateDate> <!-- any format, use for uncertain dates -->
                <!-- OR -->
                <unknown value="true"/>
            </dateOfBirth>
            <dateOfDeath> <!-- 0...1 -->
                <!-- same as dateOfBirth -->
            </dateOfDeath>
            <dateOfMarriage relatedAgent=""> <!-- 0...* --> <!-- repeat for every marriage --> <!-- add spouse in relatedAgent if known -->
                <!-- same as dateOfBirth -->
            </dateOfMarriage>
            <hasParent relatedAgent=""/> <!-- 0...* -->
            <hasSpouse relatedAgent=""/> <!-- 0...* -->
            <tribalAffiliation></tribalAffiliation> <!-- 0...* -->
            <demographicTerm uri=""></demographicTerm> <!-- use LCDGT URI in uri, use LCDGT label in element -->
            <sources> <!-- 0...1 -->
                <source uri=""/> <!-- 1...* -->
            </sources>
        </agent>
    </agents>
</nameAuthorityFile>